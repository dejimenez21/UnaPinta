@using Una_Pinta.Models
@{ 
    var listData = @TempData["resultRequest"] as RequestDetails;
    var base64 = Convert.ToBase64String(listData.Prescription);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    Layout = "LayoutUnaPinta";
}
<div class="container">
    <div class="text-center">
        <p style="font-family: 'Roboto', sans-serif; font-size:30px; font-weight:bold">Detalles de Solicitud</p>
    </div>
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/Pics/user.png" height="180" width="180">
                            <div class="text-center">
                                <label style="font-weight:bold">Nombre:</label>
                            </div>
                            <div>
                                <label id="Name">@listData.PatientName</label>
                            </div>
                            <div class="text-center">
                                <label style="font-weight:bold">Correo electrónico:</label>
                            </div>
                            <div>
                                <label id="Email">@listData.RequesterEmail</label>
                            </div>
                            <div class="text-center">
                                <label style="font-weight:bold">Teléfono:</label>
                            </div>
                            <div>
                                <label id="Phone">@listData.PatientPhone</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="mb-0" style="font-weight:bold">Dirección</label>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <label id="CenterAddress">@listData.CenterAddress</label>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="mb-0" style="font-weight:bold">Solicitud</label>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <label id="BloodComponent">@listData.BloodComponent</label>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="mb-0" style="font-weight:bold">Tipo de Hemocomponente</label>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <label id="BloodType">@listData.BloodType</label>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <label class="mb-0" style="font-weight:bold">Receta Médica</label>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <img src="@imgSrc" height="80" width="80" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>