@using UnaPinta.Dto.Models.Request
@using UnaPinta.Dto.Models.Case
@{
    Layout = "LayoutUnaPinta";
    var requestDetail = TempData["requestDetail"] as RequestCasesDto;
    var listCases = TempData["listCases"] as List<CaseForRequestDto>;
    var base64 = Convert.ToBase64String(requestDetail.Request.Prescription);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
}

<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>John Doe</h4>
                                <p class="text-secondary mb-1">Full Stack Developer</p>
                                <p class="text-muted font-size-sm">Bay Area, San Francisco, CA</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Nombre</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @requestDetail.Request.PatientName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Teléfono</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @requestDetail.Request.PatientPhone
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Centro Médico</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @requestDetail.Request.CenterName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Dirección de Centro Médico</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @requestDetail.Request.CenterAddress
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Receta Médica</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <img src="@imgSrc" height="80" width="80" />
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-12">
                                <a class="btn btn-info " href="#">Cancelar</a>
                                <a class="btn btn-success " href="#">Marcar como completado</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/MaterialDesign-Webfont/5.3.45/css/materialdesignicons.css" integrity="sha256-NAxhqDvtY0l4xn+YVa6WjAcmd94NNfttjNsDmNatFVc=" crossorigin="anonymous" />
<div class="container">
    <div class="content contact-list">
