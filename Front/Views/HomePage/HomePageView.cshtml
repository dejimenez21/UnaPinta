<div id="overlay" class="text-center">
    <div id="overlay-content">
        <br />
        <br />
        <img src="~/Pics/logo_splash.svg" id="splashIcon" />
        <br />
        <div class="spinner-border text-danger" style="width:200px; height:200px;" role="status"></div>
    </div>
</div>

<script type="text/javascript">
    $.fn.center = function () {
        this.css("position", "absolute");
        this.css("top", Math.max(0, (
            ($(window).height() - $(this).outerHeight()) / 2) +
            $(window).scrollTop()) + "px"
        );
        this.css("left", Math.max(0, (
            ($(window).width() - $(this).outerWidth()) / 2) +
            $(window).scrollLeft()) + "px"
        );
        return this;
    }

    $("#overlay").show();
    $("#splashIcon").hide();
    $("#overlay-content").show().center();
    $("#splashIcon").fadeIn("slow");


    setTimeout(function () {
        $("#overlay").fadeOut("slow");
    }, 3000);


    $("#donorCard").click(function () {
        $.ajax({
            url: 'HomePage/NavigateToBloodRequestCollection',
            success: function (response) {
                if (response.roleUser == 0) {
                    window.location.href = "User/UserLoginPage";
                }
                else if (response.roleUser != 0 && response.verified == true) {
                    window.location.href = "BloodRequest/BloodRequestDetailsCollection";
                }
            }
        });
    });

    $("#userCard").click(function () {
        $.ajax({
            url: 'HomePage/NavigateToBloodRequest',
            success: function (response) {
                if (response.roleUser == 0) {
                    window.location.href = "User/UserLoginPage";
                }
                else if (response.roleUser != 0 && response.verified == true) {
                    window.location.href = "BloodRequest/BloodRequestPage";
                }
            }
        });
    });
</script>