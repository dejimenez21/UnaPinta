@model Una_Pinta.Models.UserSignUp
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Una Pinta RD</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="shortcut icon" type="image/ico" href="@Url.Content("~/Pics/favicon_io/favicon.ico")">
    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/fonts/font-awesome.min.css">
    <link rel="stylesheet" href="/assets/fonts/line-awesome.min.css">
    <link rel="stylesheet" href="/assets/css/best-carousel-slide.css">
    <link rel="stylesheet" href="/assets/css/Footer-with-social-media-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    <link rel="stylesheet" href="/assets/css/Navbar---Apple-1.css">
    <link rel="stylesheet" href="/assets/css/Navbar---Apple.css">
    <link rel="stylesheet" href="/assets/css/Navigation-Clean.css">
    <link rel="stylesheet" href="/assets/css/Navigation-with-Search.css">
    <link rel="stylesheet" href="/assets/css/Social-Icons.css">
    <link rel="stylesheet" href="/css/CardsDashboardRequest.css">
    <link href="~/css/SelectMultiple.css" rel="stylesheet" />
    <link href="~/css/PageBody.css" rel="stylesheet" />
    <link href="~/css/SplashPage.css" rel="stylesheet" />
    <script src="/assets/js/jquery.min.js"></script>
    <link href="~/css/CardsCss.css" rel="stylesheet" />
    <link href="~/css/CarouselCss.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <script src="@Url.Content("~/scripts/donor.js")" type="text/javascript"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-light navbar-expand-lg navigation-clean">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarhome" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarhome">
                <a asp-controller="HomePage" asp-action="HomePageView">
                    <img src="~/Pics/pic-logo.png" class="img-responsive" style="width:120px" />
                </a>
                <div class="dropdown">
                    <button class="btn dropdown-toggle" data-toggle="dropdown" aria-expanded="false" type="button">Sobre nosotros</button>
                    <div class="dropdown-menu" role="menu">
                        <a class="dropdown-item" role="presentation" href="#infoPop" data-toggle="modal">Contacto</a>
                        <a class="dropdown-item" role="presentation" href="#">Valores</a>
                        <a class="dropdown-item" role="presentation" href="#">Sample sample</a>
                    </div>
                </div>
                <div class="dropdown">
                    <button class="btn dropdown-toggle" data-toggle="dropdown" aria-expanded="false" type="button">Testimonios</button>
                    <div class="dropdown-menu" role="menu">
                        <a class="dropdown-item" role="presentation" href="#">First Item</a>
                        <a class="dropdown-item" role="presentation" href="#">Second Item</a>
                        <a class="dropdown-item" role="presentation" href="#">Third Item</a>
                    </div>
                </div>
                <div class="dropdown">
                    <button class="btn dropdown-toggle" data-toggle="dropdown" aria-expanded="false" type="button">Eventos</button>
                    <div class="dropdown-menu" role="menu">
                        <a class="dropdown-item" role="presentation" href="#">First Item</a>
                        <a class="dropdown-item" role="presentation" href="#">Second Item</a>
                        <a class="dropdown-item" role="presentation" href="#">Third Item</a>
                    </div>
                </div>
                <div class="col d-flex justify-content-end">
                    @if (string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("userName")))
                    {
                        <button class="btn btn-outline-primary">Inicie sesión</button>
                    }
                    else
                    {
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Bienvenido @HttpContextAccessor.HttpContext.Session.GetString("userName")
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" asp-controller="HomePage" asp-action="HomePageView">Cerrar sesión</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <div class="modal fade" id="infoPop" role="dialog">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Contacto</h4>
                </div>
                <div class="modal-body">
                    <div class="text-center">
                        <lottie-player src="https://assets6.lottiefiles.com/packages/lf20_cq2ykkjy.json" background="transparent" speed="1" style="width: 220px; height: 220px; margin-left:auto; margin-right: auto;" loop autoplay></lottie-player>
                        <table class="table" style="border:none">
                            <tbody>
                                <tr>
                                    <td><label style="font-size:20px"><i class="fa fa-phone" style="font-size:24px"></i> 809-333-4588</label></td>
                                    <td><label style="font-size:20px"><i class="fa fa-envelope" style="font-size:24px"></i> unapintard</label></td>
                                    <td><label style="font-size:20px"><i class="fa fa-facebook" style="font-size:24px"></i> unapintard</label></td>
                                    <td><label style="font-size:20px"><i class="fa fa-instagram" style="font-size:24px"></i> unapintard</label></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-top footer text-muted">
    </footer>
    <script src=@Url.Content("https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js")></script>
    @*<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>*@
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="sweetalert2.all.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/assets/js/jquery.min.js"></script>
    <script src="~/assets/js/Navbar---Apple.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
