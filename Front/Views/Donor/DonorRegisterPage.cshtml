@model Una_Pinta.Models.UserSignUp
<div class="container" style="margin-top:20px;">
    <div class="text-center">
        <p class="lead">Registro de Donante</p>
    </div>
    <div class="card" style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);transition: 0.5s;">
        <div class="card-body">
            <form data-ajax="true" data-ajax-method="post" data-ajax-url="/Donor/DonorTapRegister" id="registerform" method="post">
                <div class="form-group">
                    <label>Dirección</label>
                    <input type="text" data-val="true" data-val-required="Dirección es requerida" class="form-control" placeholder="Dirección">
                    <div class="text-center">
                        <span data-valmsg-for="" class="text-danger" data-valmsg-replace="true" />
                    </div>
                </div>
                <div class="form-group">
                    <label>Ubicación</label>
                    <input type="text" data-val="true" data-val-required="Ubicación es requerida" class="form-control" placeholder="Ubicación">
                    <div class="text-center">
                        <span data-valmsg-for="" class="text-danger" data-valmsg-replace="true" />
                    </div>
                </div>
                <div class="form-group">
                    <label>Sexo</label>
                    <select class="form-control">
                        <option selected>Sexo</option>
                        <option value="1">M</option>
                        <option value="2">F</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Tipo de Sangre</label>
                    <input type="text" data-val="true" data-val-required="Tipo de sangre es requerido" class="form-control" placeholder="Tipo de Sangre">
                    <div class="text-center">
                        <span data-valmsg-for="BloodTypeId" class="text-danger" data-valmsg-replace="true" />
                    </div>
                </div>
                <div class="form-group">
                    <label>Peso (Kg)</label>
                    <input type="text" asp-for="Weight" class="form-control" placeholder="Peso (Kg)">
                </div>
                <div class="text-center">
                    <button type="submit" id="registeruser" class="btn-block btn btn-outline-success">Registrar</button>
                </div>
            </form>
        </div>
    </div>
</div>
