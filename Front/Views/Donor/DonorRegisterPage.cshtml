@model Api.Models.Register
<div class="container" style="padding:140px;">
    <div class="text-center">
        <p>Registro de Donante</p>
    </div>
    <div class="card" style="width: 50rem; box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);transition: 0.3s;">
        <div class="card-body">
            <form data-ajax="true" method="post">
                <div class="form-group">
                    <label>Dirección</label>
                    <input type="email" data-val="true" data-val-required="Dirección es requerida" class="form-control" placeholder="Dirección">
                    <div class="text-center">
                        <span data-valmsg-for="" class="text-danger" data-valmsg-replace="true" />
                    </div>
                </div>
                <div class="form-group">
                    <label>Ubicación</label>
                    <input type="text" data-val="true" data-val-required="Ubicación es requerida" class="form-control" placeholder="Ubicación">
                    <div class="text-center">
                        <span data-valmsg-for=""  class="text-danger" data-valmsg-replace="true" />
                    </div>
                </div>
                <div class="form-group">
                    <label>Sexo</label>
                    <select class="form-select">
                        <option selected>Sexo</option>
                        <option value="1">M</option>
                        <option value="2">F</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Tipo de Sangre</label>
                    <input type="text" class="form-control" placeholder="Tipo de Sangre">
                </div>
                <div class="form-group">
                    <label>Peso (Kg)</label>
                    <input type="text" asp-for="Weight" class="form-control" placeholder="Peso (Kg)">
                </div>
                <div class="text-center">
                    <button type="submit" class="btn-block btn btn-outline-success">Registrar</button>
                </div>
            </form>
        </div>
    </div>
</div>
