<div class="container" style="margin-top:20px;">
    <div class="text-center">
        <p class="lead">Registro de Usuario</p>
    </div>
    <div class="card" style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);transition: 0.5s;">
        <div class="card-body">
            <form data-ajax="true" method="post" class="container">
                <div class="row g-3">
                    <div class="col-sm-6">
                        <label>Nombre</label>
                        <input type="text" data-val="true" class="form-control">
                    </div>
                    <div class="col-sm-6">
                        <label>Apellidos</label>
                        <input type="text" data-val="true" class="form-control">
                    </div>
                    <div class="col-sm-6">
                        <label>Sexo</label>
                        <input type="text" data-val="true" class="form-control">
                    </div>
                    <div class="col-sm-6">
                        <label>Fecha de nacimiento</label>
                        <input type="text" data-val="true" class="form-control">
                    </div>
                    <div class="col-sm-6">
                        <label>Email</label>
                        <input type="text" data-val="true" class="form-control">
                    </div>
                    <div class="col-sm-6">
                        <label>Telefono</label>
                        <input type="text" data-val="true" class="form-control">
                    </div>
                    <div class="col-sm-6">
                        <label>Usuario</label>
                        <input type="text" data-val="true" class="form-control">
                    </div>
                    <div class="col-sm-6">
                        <label>Contraseña</label>
                        <input type="text" data-val="true" class="form-control">
                    </div>
                    <div class="col-sm-6">
                        <label>Confirmación de contraseña</label>
                        <input type="text" data-val="true" class="form-control">
                    </div>                  
                </div>
                <br />
                <div class="text-center">
                    <button type="submit" class="btn-block btn btn-outline-success">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
