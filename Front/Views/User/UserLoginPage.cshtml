@model Una_Pinta.Models.UserSignUp
<div class="container" style="margin-top:20px;">
    <div class="text-center">
        <p class="lead">Inicio de Sesión</p>
    </div>
    <div class="card" style="box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);transition: 0.5s;">
        <div class="card-body">
            <form method="post" data-ajax="true" data-ajax-url="/User/UserTapLogin" class="container">
                <label>Correo:</label>
                <input type="text" asp-for="UserName" placeholder="jhondoe" class="form-control" />
                <label>Contraseña:</label>
                <input type="password" asp-for="Password" placeholder="password" class="form-control" />
                <br />
                <div class="justify-end">
                    <div>
                        <button type="submit" class="btn btn-success">Ingresar</button>
                        @Html.ActionLink("Registrarse", // <-- Link text
                                        "UserRegisterPage", // <-- Action Method Name
                                        "User", // <-- Controller Name
                                         null, // <-- Route value
                                         new {@class = "btn btn-primary"} // <-- htmlArguments
                                         )
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>